import time 
import random 
from IPython.display import clear_output

data = []

print("Real-Time Data Visualization (Sensor Simulation)")
time.sleep(1)

for i in range(60): # 60 frames = 6 seconds of live data
    value  = random.randint(1, 50)
    data.append(value)

    clear_output(wait=True)
    print("Live Data Stream\n")
    print("Value:",value)
    print("-"*60)

    #Draw ASCII graph
    for v in data[-20:]:
      print("ðŸ’š"*(v//2))
      
    time.sleep(0.1)
